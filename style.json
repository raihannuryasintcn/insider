{
  "designSystem": {
    "name": "Flup Dashboard Theme",
    "description": "Design system berdasarkan analisis dashboard Flup dengan gaya modern, clean, dan minimalis",
    
    "colorPalette": {
      "primary": {
        "50": "#eff6ff",
        "100": "#dbeafe", 
        "500": "#1e40af",
        "600": "#1d4ed8",
        "700": "#1e3a8a",
        "brand": "#1e40af"
      },
      "secondary": {
        "50": "#f8fafc",
        "100": "#f1f5f9",
        "200": "#e2e8f0",
        "300": "#cbd5e1",
        "400": "#94a3b8",
        "500": "#64748b",
        "600": "#475569",
        "700": "#334155",
        "800": "#1e293b",
        "900": "#0f172a"
      },
      "background": {
        "primary": "#ffffff",
        "secondary": "#f8fafc",
        "tertiary": "#f1f5f9"
      },
      "status": {
        "success": "#10b981",
        "warning": "#f59e0b", 
        "error": "#ef4444",
        "info": "#3b82f6",
        "inProgress": "#3b82f6",
        "completed": "#10b981",
        "cancelled": "#ef4444",
        "returned": "#f59e0b"
      }
    },

    "typography": {
      "fontFamily": {
        "primary": "Inter, system-ui, sans-serif",
        "mono": "Fira Code, monospace"
      },
      "fontSize": {
        "xs": "0.75rem",
        "sm": "0.875rem", 
        "base": "1rem",
        "lg": "1.125rem",
        "xl": "1.25rem",
        "2xl": "1.5rem",
        "3xl": "1.875rem"
      },
      "fontWeight": {
        "normal": "400",
        "medium": "500",
        "semibold": "600",
        "bold": "700"
      }
    },

    "spacing": {
      "xs": "0.25rem",
      "sm": "0.5rem",
      "md": "1rem", 
      "lg": "1.5rem",
      "xl": "2rem",
      "2xl": "3rem"
    },

    "borderRadius": {
      "sm": "0.25rem",
      "md": "0.375rem",
      "lg": "0.5rem",
      "xl": "0.75rem"
    },

    "shadows": {
      "sm": "0 1px 2px 0 rgb(0 0 0 / 0.05)",
      "md": "0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1)",
      "lg": "0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1)",
      "card": "0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1)"
    }
  },

  "components": {
    "sidebar": {
      "container": {
        "className": "w-64 h-screen bg-white border-r border-gray-200 flex flex-col",
        "width": "16rem",
        "background": "bg-white",
        "border": "border-r border-gray-200"
      },
      "header": {
        "className": "flex items-center gap-2 p-6 border-b border-gray-100",
        "logo": {
          "className": "w-8 h-8 bg-primary-500 rounded-full flex items-center justify-center",
          "icon": "text-white font-bold text-sm"
        },
        "title": {
          "className": "text-lg font-semibold text-gray-900"
        }
      },
      "navigation": {
        "container": {
          "className": "flex-1 px-4 py-6"
        },
        "section": {
          "className": "mb-8",
          "title": {
            "className": "text-xs font-medium text-gray-400 uppercase tracking-wider mb-3"
          }
        },
        "item": {
          "base": "flex items-center gap-3 px-3 py-2 rounded-lg text-sm font-medium transition-colors",
          "active": "bg-primary-50 text-primary-700 border-r-2 border-primary-500",
          "inactive": "text-gray-600 hover:bg-gray-50 hover:text-gray-900",
          "icon": "w-5 h-5"
        }
      },
      "footer": {
        "className": "p-4 border-t border-gray-100",
        "user": {
          "container": "flex items-center gap-3",
          "avatar": "w-8 h-8 bg-gray-200 rounded-full",
          "info": {
            "name": "text-sm font-medium text-gray-900",
            "role": "text-xs text-gray-500"
          }
        }
      }
    },

    "topBar": {
      "container": {
        "className": "h-16 bg-white border-b border-gray-200 flex items-center justify-between px-6"
      },
      "breadcrumb": {
        "className": "flex items-center gap-2 text-sm text-gray-600"
      },
      "actions": {
        "className": "flex items-center gap-4"
      }
    },

    "card": {
      "base": {
        "className": "bg-white rounded-lg border border-gray-200 shadow-card"
      },
      "header": {
        "className": "px-6 py-4 border-b border-gray-100",
        "title": "text-lg font-semibold text-gray-900",
        "subtitle": "text-sm text-gray-500"
      },
      "content": {
        "className": "p-6"
      },
      "stats": {
        "container": "grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6",
        "item": {
          "className": "bg-white rounded-lg border border-gray-200 p-6 shadow-card",
          "icon": "w-10 h-10 bg-gray-100 rounded-lg flex items-center justify-center mb-4",
          "label": "text-sm font-medium text-gray-600 mb-1",
          "value": "text-2xl font-bold text-gray-900",
          "change": {
            "positive": "text-xs text-green-600 flex items-center gap-1",
            "negative": "text-xs text-red-600 flex items-center gap-1"
          }
        }
      }
    },

    "table": {
      "container": {
        "className": "bg-white rounded-lg border border-gray-200 shadow-card overflow-hidden"
      },
      "header": {
        "className": "px-6 py-4 border-b border-gray-100 flex items-center justify-between",
        "title": "text-lg font-semibold text-gray-900",
        "actions": "flex items-center gap-3"
      },
      "filters": {
        "container": "px-6 py-3 bg-gray-50 border-b border-gray-100 flex items-center justify-between",
        "tabs": {
          "container": "flex items-center gap-1",
          "tab": {
            "base": "px-3 py-1.5 text-sm font-medium rounded-md transition-colors",
            "active": "bg-primary-500 text-white",
            "inactive": "text-gray-600 hover:text-gray-900 hover:bg-gray-100"
          }
        },
        "search": {
          "className": "relative",
          "input": "pl-8 pr-4 py-2 border border-gray-200 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent",
          "icon": "absolute left-2.5 top-2.5 w-4 h-4 text-gray-400"
        }
      },
      "table": {
        "className": "w-full",
        "header": {
          "row": "border-b border-gray-100",
          "cell": "px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
        },
        "body": {
          "row": "border-b border-gray-50 hover:bg-gray-50 transition-colors",
          "cell": "px-6 py-4 text-sm text-gray-900"
        }
      }
    },

    "button": {
      "base": {
        "className": "inline-flex items-center justify-center font-medium rounded-lg transition-colors focus:outline-none focus:ring-2 focus:ring-offset-2"
      },
      "variants": {
        "primary": {
          "className": "bg-primary-500 text-white hover:bg-primary-600 focus:ring-primary-500",
          "sizes": {
            "sm": "px-3 py-1.5 text-sm",
            "md": "px-4 py-2 text-sm", 
            "lg": "px-6 py-3 text-base"
          }
        },
        "secondary": {
          "className": "bg-gray-100 text-gray-900 hover:bg-gray-200 focus:ring-gray-500",
          "sizes": {
            "sm": "px-3 py-1.5 text-sm",
            "md": "px-4 py-2 text-sm",
            "lg": "px-6 py-3 text-base"
          }
        },
        "outline": {
          "className": "border border-gray-300 text-gray-700 hover:bg-gray-50 focus:ring-gray-500",
          "sizes": {
            "sm": "px-3 py-1.5 text-sm",
            "md": "px-4 py-2 text-sm",
            "lg": "px-6 py-3 text-base"
          }
        },
        "ghost": {
          "className": "text-gray-600 hover:text-gray-900 hover:bg-gray-100 focus:ring-gray-500",
          "sizes": {
            "sm": "px-3 py-1.5 text-sm",
            "md": "px-4 py-2 text-sm",
            "lg": "px-6 py-3 text-base"
          }
        }
      }
    },

    "badge": {
      "base": {
        "className": "inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium"
      },
      "variants": {
        "success": "bg-green-100 text-green-800",
        "warning": "bg-yellow-100 text-yellow-800", 
        "error": "bg-red-100 text-red-800",
        "info": "bg-blue-100 text-blue-800",
        "neutral": "bg-gray-100 text-gray-800"
      },
      "status": {
        "completed": "bg-green-100 text-green-800",
        "inProgress": "bg-blue-100 text-blue-800",
        "cancelled": "bg-red-100 text-red-800",
        "returned": "bg-yellow-100 text-yellow-800"
      }
    },

    "input": {
      "base": {
        "className": "block w-full px-3 py-2 border border-gray-300 rounded-lg text-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent"
      },
      "variants": {
        "default": "border-gray-300",
        "error": "border-red-300 focus:ring-red-500",
        "success": "border-green-300 focus:ring-green-500"
      }
    },

    "select": {
      "base": {
        "className": "block w-full px-3 py-2 border border-gray-300 rounded-lg text-sm bg-white focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent"
      }
    },

    "chart": {
      "container": {
        "className": "bg-white rounded-lg border border-gray-200 shadow-card p-6"
      },
      "title": {
        "className": "text-lg font-semibold text-gray-900 mb-4"
      },
      "legend": {
        "container": "flex items-center gap-6 mb-6",
        "item": "flex items-center gap-2 text-sm text-gray-600"
      }
    },

    "modal": {
      "overlay": {
        "className": "fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center p-4 z-50"
      },
      "content": {
        "className": "bg-white rounded-lg shadow-lg max-w-md w-full max-h-[90vh] overflow-y-auto"
      },
      "header": {
        "className": "px-6 py-4 border-b border-gray-100 flex items-center justify-between"
      },
      "body": {
        "className": "px-6 py-4"
      },
      "footer": {
        "className": "px-6 py-4 border-t border-gray-100 flex items-center justify-end gap-3"
      }
    },

    "tooltip": {
      "className": "bg-gray-900 text-white text-xs px-2 py-1 rounded shadow-lg"
    },

    "dropdown": {
      "trigger": {
        "className": "inline-flex items-center gap-2 px-4 py-2 border border-gray-300 rounded-lg text-sm bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-primary-500"
      },
      "menu": {
        "className": "absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-lg border border-gray-200 py-1 z-10"
      },
      "item": {
        "className": "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100"
      }
    }
  },

  "layout": {
    "main": {
      "className": "min-h-screen bg-gray-50 flex"
    },
    "content": {
      "className": "flex-1 flex flex-col overflow-hidden"
    },
    "page": {
      "className": "flex-1 overflow-y-auto p-6"
    },
    "container": {
      "className": "max-w-7xl mx-auto"
    },
    "grid": {
      "responsive": "grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6"
    }
  },

  "animations": {
    "transition": "transition-all duration-200 ease-in-out",
    "fadeIn": "animate-in fade-in duration-200",
    "slide": "animate-in slide-in-from-right duration-300"
  },

  "breakpoints": {
    "sm": "640px",
    "md": "768px", 
    "lg": "1024px",
    "xl": "1280px",
    "2xl": "1536px"
  }
}